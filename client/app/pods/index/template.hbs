{{#if store.initDone}}
    <div class="flex-1 flex-row">
        {{window-grid model=model activeDesktop=activeDesktop menuAction="menuAction" windowAction="windowAction" dragActiveAction="dragActiveAction"}}

        <div class="sidebar flex-grow-column">
            <div class="upper-sidebar flex-1">
                {{desktop-switcher desktops=desktops action="switchDesktop" activeDraggedWindow=activeDraggedWindow selected=activeDesktop}}
            </div>

            <div class="lower-sidebar">
                <div class="btn-group dropdown">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-plus fa-lg"></i>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right main-sidebar-button-down">
                        <li {{action "openModal" "create-group-modal"}}><a href="#">Create new group&#8230;</a></li>
                        <li {{action "openModal" "join-group-modal"}}><a href="#">Join existing group&#8230;</a></li>
                        <li class="divider"></li>
                        <li {{action "openModal" "join-irc-modal"}}><a href="#">Join IRC channel&#8230;</a></li>
                    </ul>
                </div>

                <div class="btn-group dropup pull-left">
                    <button type="button" class="btn btn-default btn-friends dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user fa-lg"></i>
                        {{#if friendsOnline}}
                            <span class="badge">{{friendsOnline}}</span>
                        {{/if}}
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right main-sidebar-button-up">
                        {{friends-list windowAction="windowAction" removeFriend="removeFriend" friends=friends}}
                    </ul>
                </div>

                {{!--

                <div class="btn-group dropup pull-left">
                    <button type="button" class="btn btn-default" data-toggle="dropdown">
                        <i class="fa fa-search fa-lg"></i>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right main-sidebar-button-up">
                        {{search-panel}}
                    </ul>
                </div>

                --}}

                <div class="btn-group dropup pull-left">
                    <button type="button" class="btn btn-default" data-toggle="dropdown">
                        <i class="fa fa-wrench fa-lg"></i>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right main-sidebar-button-up">
                        <li {{action "openModal" "profile-modal"}}><a href="#">Profile&#8230;</a></li>
                        <li {{action "logout"}}><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="window-contextMenu" class="dropdown clearfix">
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
            <li class="dropdown-header"></li>
            {{! <li class="divider"></li> }}
            <li><a data-action="chat" href="#">Start private chat with</a></li>
            {{! <li><a data-action="op" href="#">Give operator rights</a></li> }}
            <li class="window-contexMenu-request-friend"><a data-action="requestFriend" href="#">Add to contacts list</a></li>
        </ul>
    </div>
{{else}}
    <div class="flex-grow-row flex-1 flex-align-center">
        <div class="loader loader-big"></div>
    </div>
{{/if}}


