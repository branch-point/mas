{{#modal-dialog title="Join group" proceedButton="OK" cancel="closeModal" submit="joinGroup"}}
    <span class="error-text">{{errorMsg}}</span>
    <form role="form">
        <div class="form-group">
            <label>Type the name of the group you wish to join</label>
            {{input class="form-control" elementId="join_group_name" value=group}}
        </div>
        <div class="form-group">
            <label>Password, if needed</label>
            {{input class="form-control" elementId="join_group_password" value=password}}
        </div>
    </form>
{{/modal-dialog}}