{{#modal-dialog title="Take a photo" proceedButton="Upload photo" cancel="closeModal" submit="uploadPhoto"}}
    <div class="webcam">
        <div id="webcam-viewfinder">
        </div>

        <img id="webcam-snapshot" />

        <div class="note">
            {{note}}
        </div>

        <button {{action "takePhoto"}} type="button" class="btn btn-primary btn-capture"><i class="fa fa-camera"></i></button>
    </div>
{{/modal-dialog}}
