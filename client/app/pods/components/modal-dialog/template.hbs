<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            {{#unless noCancel}}
                {{#unless noControls}}
                    <button {{action "cancel"}} type="button" class="close">&times;</button>
                {{/unless}}
            {{/unless}}
            <h4 class="modal-title">{{title}}</h4>
        </div>
        <div class="modal-body">
            {{yield}}
        </div>
        {{#unless noControls}}
            <div class="modal-footer">
                {{#if terminateButton}}
                    <div class="pull-left">
                        <button {{action "terminate"}} type="button" class="modal-terminate btn btn-danger">
                            {{terminateButton}}
                        </button>
                    </div>
                {{/if}}
                <div class="pull-right">
                    {{#unless noCancel}}
                        <button {{action "cancel"}} type="button" class="modal-cancel btn btn-default">
                            Cancel
                        </button>
                    {{/unless}}
                    <button {{action "proceed"}} type="button" class="modal-proceed btn btn-primary">
                        {{proceedButton}}
                    </button>
                </div>
            </div>
        {{/unless}}
    </div>
</div>
