<div class="upper-sidebar flex-1">
    {{desktop-switcher}}
</div>

<div class="lower-sidebar">
    <div class="btn-group dropdown">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-plus fa-lg"></i>
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right main-sidebar-button-down">
            <li {{action "openModal" "create-group-modal"}}><a href="#">Create new group&#8230;</a></li>
            <li {{action "openModal" "join-group-modal"}}><a href="#">Join existing group&#8230;</a></li>
            <li class="divider"></li>
            <li {{action "openModal" "join-irc-modal"}}><a href="#">Join IRC channel&#8230;</a></li>
        </ul>
    </div>

    <div class="btn-group dropup pull-left">
        <button type="button" class="btn btn-default btn-friends dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user fa-lg"></i>
            {{#if friendsOnline}}
                <span class="badge">{{friendsOnline}}</span>
            {{/if}}
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right main-sidebar-button-up">
            {{friends-list windowAction="windowAction" removeFriend="removeFriend" friends=friends}}
        </ul>
    </div>

