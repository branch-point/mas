{{#modal-dialog title=alertsTitle proceedButton="Change" cancel="closeModal" submit="changeAlerts"}}
    <form role="form">
        <div class="new-row">
            <label>
                {{input type="checkbox" checked=modalSoundAlert}} Play sound when new message arrives.
            </label>
        </div>

        <div class="new-row">
            <label>
                {{input type="checkbox" checked=modalTitleAlert}} Increase the amount of unread messages in browser title bar when new message arrives.
            </label>
        </div>

        <div class="new-row">
            <label>
                {{input type="checkbox" checked=modalEmailAlert}} Send an email when I'm not logged in and somebody mentions (@mynick) me.
            </label>
        </div>
    </form>
{{/modal-dialog}}
