{{#modal-dialog title="Password protection" proceedButton="Change" cancel="cancel" submit="changePassword"}}
    <span class="error-text">{{errorMsg}}</span>
    <form role="form">
        <label class="btn modal-radio">
            {{view Mas.RadioButton selectionBinding="modalPasswordStatus" value="enabled"}}
            Enabled
        </label>
        <label class="btn modal-radio">
            {{view Mas.RadioButton selectionBinding="modalPasswordStatus" value="disabled"}}
            Disabled
        </label>
        <div class="form-group">
            <label>Password</label>
            {{input class="form-control" elementId="password" valueBinding="modalPassword" disabled=modalPasswordDisabled}}
        </div>
    </form>
{{/modal-dialog}}