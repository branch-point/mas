;
; MAS Server main configuration file
;

; GENERAL OPTIONS

; Project root directory is the base if relative paths are used

[common]
env=default

[frontend]
port=3200
demo_mode=false
demo_user_email=whogets@fakemessages.com

[log]
enabled=true
directory=logs
clear_at_startup=false
console=false

[pid]
enabled=true
directory=run

[loggly]
enabled=false
subdomain=example
token=nnnnnnnn-nnnn-nnnn-nnnn-nnnnnnnnnnnn

[session]
max_parallel=8
idle_timeout=360

[redis]
port=6379
host=localhost

[openid]
return_url=http://yoursite.com/auth/google/callback
realm=http://yoursite.com

; OPTIONS FOR THE IRC BACKEND

[irc]
enabled=true
identd=false

[irc.networks.IRCNet]
host=localhost
port=6666

[irc.networks.FreeNode]
host=irc.freenode.net
port=6667

[irc.networks.W3C]
host=irc.w3.org
port=6665
