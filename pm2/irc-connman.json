{
  "apps" : [{
    "name"        : "irc-backend-connman",
    "script"      : "./server/backends/irc/connectionManager.js",
    "args"        : [ "--configFile=mas.conf" ],
    "exec_mode"   : "fork",
    "merge_logs"  : false,
    "instances"   : 1,
    "cwd"         : ".",
    "pid_file"    : "./run/irc-backend-connman.pid",
    "error_file"  : "./logs/irc-backend-connman.stderr.log",
    "out_file"    : "./logs/irc-backend-connman.stdout.log",
    "min_uptime"  : 15000,
    "max_restarts": 1
  }]
}
