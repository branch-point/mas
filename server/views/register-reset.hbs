<link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">

<style>
    * {
        font-family: 'Cabin', sans-serif;
    }

    body {
        background-color: #13262f;
        color: #d9d9d9;
    }

    .narrow-container {
        margin: 50px auto;
        max-width: 600px;
    }

    label {
        color: #d9d9d9;
        margin-bottom: 5px;
        display: block;
        margin-top: 30px;
    }

    button {
        margin-top: 40px;
        font-size: 18px;
        text-align: center;
        line-height: 48px;
        border: 1px solid #dbdbdb;
        border-radius: 3px;
        background-color: #13262f;
        border-color: #5cadff;
        color: #5cadff;
        padding: 0 20px;
        cursor: pointer;
    }

    input {
        font-size: 18px;
        width: 300px;
    }
</style>

<div class="narrow-container">
    Please enter a new password.

    <form id="register-form" class="register-form" action="/api/v1/register-reset" method="post" role="form" novalidate autocomplete="off">
        {{{registrationForm}}}

        <div class="register-controls">
            <button type="submit" class="btn btn-primary">Change password</button>
        </div>
    </form>
</div>
