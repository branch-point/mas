#!/usr/bin/env bash

set -e

if [[ $TRAVIS == true ]]; then
    echo -e "travis_fold:start:Bootstrap"
fi

ROOT=$( cd $( dirname "${BASH_SOURCE[0]}" ) && cd .. && pwd )
cd $ROOT

gulp build-assets

cd client

npm install
bower install
ember build

if [[ $TRAVIS == true ]]; then
    echo -e "travis_fold:end:Bootstrap"
fi
