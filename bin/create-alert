'use strict';

let readlineSync = require('readline-sync'),
    log = require('../server/lib/log'),
    redisModule = require('../server/lib/redis'),
    redis = redisModule.createClient(),
    notification = require('../server/lib/notification');

let message = readlineSync.question('Message: ');
let expiresInHours = readlineSync.question('Expires in (hours): ');
let dismissible = yesOrNo('Can be dismissed?');

let now = Math.round(Date.now() / 1000);
let ts = now + expiresInHours * 60 * 60;

(async function() {
    await redisModule.loadScripts();

    let alertId = await redis.incr('nextGlobalAlertId');

    let alert = {
        message: message,
        expires: ts,
        dismissible: dismissible,
        report: true
    };

    await redis.hmset(`alert:${alertId}`, alert);
    await redis.sadd('alertlist', alertId);

    let allIds = await redis.smembers('alertlist');

    // Delete expired alerts
    for (let oldAlertId of allIds) {
        let oldAlert = await redis.hgetall(`alert:${oldAlertId}`);

        if (now > oldAlert.expires) {
            redis.del('`alert:${oldAlertId})`');
            redis.srem('alertlist', oldAlertId);
        }
    }

    // Deliver the alert
    console.log('Delivering the alert to all logged in users...'); // eslint-disable-line no-console

    let allUsers = await redis.smembers('userlist');

    // Convert object to MAS notification
    alert.id = 'ALERT';
    alert.alertId = alertId;
    delete alert.expires;

    for (let userId of allUsers) {
        await redis.sadd(`activealerts:${userId}`, alertId);
        await notification.broadcast(userId, alert);
    }

    redisModule.shutdown();
    log.quit();

    console.log('Done. All OK.'); // eslint-disable-line no-console
})();

function yesOrNo(label) {
    let result = null;

    while (result === null) {
        let response = readlineSync.question(label + ' [yes/no]: ');

        if (response === 'yes') {
            result = true;
        } else if (response === 'no') {
            result = false;
        }
    }

    return result;
}
