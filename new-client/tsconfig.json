{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "outDir": "ts-dist",
    "sourceMap": true,
    "declaration": true,
    "noEmit": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    // "noPropertyAccessFromIndexSignature": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true // TODO: Remove when chakra UI is updated and compiles again without this option
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
